@{
    Layout = null;
}

<html>
<head>
    <title></title>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/lib/ligerUI/js/core/base.js"></script>
    <script src="~/lib/ligerUI/js/plugins/ligerDrag.js" type="text/javascript"></script>
    <script src="~/lib/ligerUI/js/plugins/ligerDialog.js" type="text/javascript"></script>
    <script src="~/lib/ligerUI/js/ligerui.all.js"></script>
</head>

<body>
    <div id="mainContainer" class="divFont">
        <div id="fakabianhao" style="clear:both;margin-left:100px; margin-top:50px;  width:600px">
            <label class="col-sm-2 control-label" style="width:200px">发卡编号</label>
            <br/>
            <br/>
 
            <label class="col-sm-2 control-label" style="width:300px">请输入用户IC卡编号</label>
                    
            <input id="ywbh" type="text" name="ywbh" class="form-control setting" style="width:200px" />
            <br/>
            <br/>
            <input type="button" id="submitBtn1" value="确定" class="btn btn-default" style="margin-right:50px;width:50px" />
            <input type="button" id="submitBtn2" value="取消" class="btn btn-default" style="width:50px" />
        </div>
    </div>

    <script type="text/javascript">

        $("#submitBtn1").click(function () {
            var ywbh = $("#ywbh").val();
            if (ywbh != "") {
                var postData = {
                    ywbh: ywbh
                };
                $.post("../FaKaRecharge/getUserByYwbh", postData, getUserCalllback);
            }
            else $.ligerDialog.warn("业务编号不能为空！");
        })
        function getUserCalllback(data) {
            if (data == "../SellCard/NewCardCharge")
                $("#mainContainer").load(data);
            else
                $.ligerDialog.warn('用户不存在！');
        }

    </script>

</body>
</html>

