@{
    ViewBag.Title = "YuChongZhangDeal";
}

<html>
<head>
    <title></title>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/lib/ligerUI/js/core/base.js"></script>
    <script src="~/lib/ligerUI/js/plugins/ligerDialog.js" type="text/javascript"></script>
    <script src="~/lib/ligerUI/js/ligerui.all.js"></script>


</head>

<body>
    <div id="container" class="divFont" style="clear:both;margin-left:50px; margin-top:50px;  width:900px">
        <div>
            <label class="col-sm-2 control-label" style="width:150px">错帐处理</label>
            <br />
            <br />
        </div>
        <div>
            <h3>代售点预冲账处理</h3>
            <br />
            <br />
        </div>
        <div style="width:400px">
            <table class="table table-condensed tabFont">
                <tr>
                    <td>发票编号</td>
                    <td><input type="text" id="fpbh" name="fpbh" class="form-control setting" style="width:200px" disabled="disabled" /></td>
                </tr>
            </table>
        </div>
        <div>
            <br />
            <table id="table2" class="table table-condensed tabFont">
                <tr>
                    <td>业务编号</td>
                    <td><input id="ywbh" type="text" name="ywbh" class="form-control setting" style="width:200px" disabled="disabled" value="1" /></td>
                    <td>售卡气量</td>
                    <td><input id="skql" type="text" name="skql" class="form-control setting" style="width:200px" disabled="disabled" value="" /></td>
                </tr>
                <tr>
                    <td>售卡金额</td>
                    <td><input id="skje" type="text" name="skje" class="form-control setting" style="width:200px" disabled="disabled" value="" /></td>
                    <td>操作人员</td>
                    <td><input id="czry" type="text" name="czry" class="form-control setting" style="width:200px" disabled="disabled" value="" /></td>
                </tr>
                <tr>
                    <td>充值时间</td>
                    <td><input id="czsj" type="text" name="czsj" class="form-control setting" disabled="disabled" style="width:300px" value="" /></td>
                </tr>
            </table>
            <br />
            <br />
        </div>
        <div style="margin-left:300px">
            <input type="button" value="读IC卡" id="readcardBtn" class="btn btn-default" style="width: 70px" />
            <input type="button" value="确定" id="confirmBtn" class="btn btn-default" style="margin-left: 60px;  width: 70px" />
            <input type="button" value="返回" id="backBtn" class="btn btn-default" style="margin-left: 60px; width: 70px" />
        </div>
    </div>
    <script type="text/javascript">
        $("#readcardBbtn").click(function () {

        })
        $("#confirmBtn").click(function () {
            var postData = {};
            var ywbh = $("#ywbh").val();
            postData = {
                ywbh: ywbh
            };
            $.post("../ClearLastRecharge/YuChongZhangDeal", postData, CallBack);
        });
        function CallBack(data) {
            if (data == "此账已处理成功！")
                $.ligerDialog.success(data);
            else
                $.ligerDialog.error(data);
        }
        $("#backBtn").click(function () {
            $("#container").hide();
        })
    </script>
</body>
</html>
